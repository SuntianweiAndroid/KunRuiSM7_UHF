<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_inv_rt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/Item_Tag_EPC" />

        <TextView
            android:id="@+id/textView_write_epc"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_weight="0.47"
            android:text="@string/TextView_Null" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/write_passwd" />

        <EditText
            android:id="@+id/editText_write_passwd"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/VALUE_ZERO" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="sm7密码(hex)" />

        <EditText
            android:id="@+id/editText_write_krsm7_passwd"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00000000000000000000000000000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="sm7Action(hex)" />

        <EditText
            android:id="@+id/editText_write_krsm7_action"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="01" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView_write_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.21"
        android:text="@string/TextView_Null"
        android:textColor="#f40404" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_write_ok"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="@string/btn_sm7" />

        <Button
            android:id="@+id/btn_write_cancle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.27"
            android:text="@string/btn_out" />
    </LinearLayout>

</LinearLayout>